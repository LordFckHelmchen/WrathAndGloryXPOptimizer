[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = B950,D100,D101,D102,D103,D104,D105,D107,E203,E501,RST201,RST203,RST301,W503
max-line-length = 80
max-complexity = 10
docstring-convention = numpy
per-file-ignores = tests/*:S101,N802
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
